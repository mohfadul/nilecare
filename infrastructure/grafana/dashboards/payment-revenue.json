{
  "dashboard": {
    "title": "Payment Gateway - Revenue Analytics",
    "tags": ["payment", "revenue", "financial", "nilecare"],
    "timezone": "Africa/Khartoum",
    "panels": [
      {
        "id": 1,
        "title": "Total Revenue (Today)",
        "type": "stat",
        "gridPos": { "h": 6, "w": 8, "x": 0, "y": 0 },
        "targets": [
          {
            "expr": "sum(increase(payment_amount_sum{status='confirmed'}[1d]))",
            "legendFormat": "Today's Revenue"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "palette-classic" },
            "unit": "SDG",
            "decimals": 2,
            "thresholds": {
              "steps": [
                { "value": 0, "color": "blue" },
                { "value": 100000, "color": "green" },
                { "value": 500000, "color": "yellow" }
              ]
            }
          }
        },
        "options": {
          "graphMode": "area",
          "colorMode": "background"
        }
      },
      {
        "id": 2,
        "title": "Revenue (Last 7 Days)",
        "type": "stat",
        "gridPos": { "h": 6, "w": 8, "x": 8, "y": 0 },
        "targets": [
          {
            "expr": "sum(increase(payment_amount_sum{status='confirmed'}[7d]))",
            "legendFormat": "7-Day Revenue"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "palette-classic" },
            "unit": "SDG",
            "decimals": 2
          }
        },
        "options": {
          "graphMode": "area",
          "colorMode": "background"
        }
      },
      {
        "id": 3,
        "title": "Revenue (Last 30 Days)",
        "type": "stat",
        "gridPos": { "h": 6, "w": 8, "x": 16, "y": 0 },
        "targets": [
          {
            "expr": "sum(increase(payment_amount_sum{status='confirmed'}[30d]))",
            "legendFormat": "30-Day Revenue"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "palette-classic" },
            "unit": "SDG",
            "decimals": 2
          }
        },
        "options": {
          "graphMode": "area",
          "colorMode": "background"
        }
      },
      {
        "id": 4,
        "title": "Revenue Trend (Last 30 Days)",
        "type": "graph",
        "gridPos": { "h": 10, "w": 24, "x": 0, "y": 6 },
        "targets": [
          {
            "expr": "sum(increase(payment_amount_sum{status='confirmed'}[1d]))",
            "legendFormat": "Daily Revenue"
          }
        ],
        "yaxes": [
          {
            "label": "Revenue (SDG)",
            "format": "SDG",
            "decimals": 2
          }
        ],
        "lines": true,
        "fill": 2,
        "linewidth": 2,
        "pointradius": 5,
        "points": true
      },
      {
        "id": 5,
        "title": "Revenue by Provider",
        "type": "graph",
        "gridPos": { "h": 10, "w": 12, "x": 0, "y": 16 },
        "targets": [
          {
            "expr": "sum by (provider) (increase(payment_amount_sum{status='confirmed'}[24h]))",
            "legendFormat": "{{provider}}"
          }
        ],
        "yaxes": [
          {
            "label": "Revenue (SDG)",
            "format": "SDG"
          }
        ],
        "stack": true,
        "fill": 5
      },
      {
        "id": 6,
        "title": "Average Transaction Value",
        "type": "graph",
        "gridPos": { "h": 10, "w": 12, "x": 12, "y": 16 },
        "targets": [
          {
            "expr": "avg(payment_amount) by (provider)",
            "legendFormat": "{{provider}}"
          }
        ],
        "yaxes": [
          {
            "label": "Average Amount (SDG)",
            "format": "SDG"
          }
        ]
      },
      {
        "id": 7,
        "title": "Transaction Fees Collected",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 26 },
        "targets": [
          {
            "expr": "sum(increase(payment_fees_total[1h]))",
            "legendFormat": "Total Fees"
          },
          {
            "expr": "sum by (provider) (increase(payment_fees_total[1h]))",
            "legendFormat": "{{provider}} fees"
          }
        ],
        "yaxes": [
          {
            "label": "Fees (SDG)",
            "format": "SDG"
          }
        ]
      },
      {
        "id": 8,
        "title": "Net Revenue (After Fees)",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 26 },
        "targets": [
          {
            "expr": "sum(increase(payment_amount_sum{status='confirmed'}[1h])) - sum(increase(payment_fees_total[1h]))",
            "legendFormat": "Net Revenue"
          }
        ],
        "yaxes": [
          {
            "label": "Net Revenue (SDG)",
            "format": "SDG"
          }
        ],
        "fill": 2,
        "fillGradient": 5
      },
      {
        "id": 9,
        "title": "Revenue per Hour (Today)",
        "type": "bargauge",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 34 },
        "targets": [
          {
            "expr": "sum(increase(payment_amount_sum{status='confirmed'}[1h]))",
            "legendFormat": "Hourly Revenue"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "continuous-GrYlRd" },
            "unit": "SDG",
            "min": 0
          }
        },
        "options": {
          "orientation": "horizontal",
          "displayMode": "gradient",
          "showUnfilled": true
        }
      },
      {
        "id": 10,
        "title": "Top Revenue Providers (Last 24h)",
        "type": "table",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 34 },
        "targets": [
          {
            "expr": "topk(10, sum by (provider) (increase(payment_amount_sum{status='confirmed'}[24h])))",
            "format": "table",
            "instant": true
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": { "Time": true },
              "renameByName": {
                "provider": "Provider",
                "Value": "Revenue (SDG)"
              }
            }
          }
        ],
        "options": {
          "showHeader": true,
          "sortBy": [
            {
              "displayName": "Revenue (SDG)",
              "desc": true
            }
          ]
        }
      },
      {
        "id": 11,
        "title": "Refund Rate (%)",
        "type": "gauge",
        "gridPos": { "h": 6, "w": 6, "x": 0, "y": 42 },
        "targets": [
          {
            "expr": "sum(increase(refund_total[24h])) / sum(increase(payment_total[24h])) * 100",
            "legendFormat": "Refund Rate"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "thresholds" },
            "thresholds": {
              "steps": [
                { "value": 0, "color": "green" },
                { "value": 2, "color": "yellow" },
                { "value": 5, "color": "red" }
              ]
            },
            "unit": "percent",
            "min": 0,
            "max": 10
          }
        }
      },
      {
        "id": 12,
        "title": "Failed Payment Loss (SDG)",
        "type": "stat",
        "gridPos": { "h": 6, "w": 6, "x": 6, "y": 42 },
        "targets": [
          {
            "expr": "sum(increase(payment_amount_sum{status='failed'}[24h]))",
            "legendFormat": "Lost Revenue"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "thresholds" },
            "thresholds": {
              "steps": [
                { "value": 0, "color": "green" },
                { "value": 10000, "color": "yellow" },
                { "value": 50000, "color": "red" }
              ]
            },
            "unit": "SDG"
          }
        }
      },
      {
        "id": 13,
        "title": "Provider Fee Comparison",
        "type": "bargauge",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 42 },
        "targets": [
          {
            "expr": "sum by (provider) (increase(payment_fees_total[24h]))",
            "legendFormat": "{{provider}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "continuous-GrYlRd" },
            "unit": "SDG"
          }
        },
        "options": {
          "orientation": "vertical",
          "displayMode": "gradient"
        }
      },
      {
        "id": 14,
        "title": "Payment Volume vs Revenue",
        "type": "graph",
        "gridPos": { "h": 8, "w": 24, "x": 0, "y": 50 },
        "targets": [
          {
            "expr": "sum(rate(payment_total[5m]))",
            "legendFormat": "Payment Volume (transactions/sec)",
            "yAxisIndex": 0
          },
          {
            "expr": "sum(rate(payment_amount_sum[5m]))",
            "legendFormat": "Revenue Rate (SDG/sec)",
            "yAxisIndex": 1
          }
        ],
        "yaxes": [
          {
            "label": "Transactions/sec",
            "format": "short",
            "position": "left"
          },
          {
            "label": "Revenue/sec (SDG)",
            "format": "SDG",
            "position": "right"
          }
        ]
      }
    ],
    "refresh": "30s",
    "time": {
      "from": "now-24h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["10s", "30s", "1m", "5m", "15m", "1h"]
    },
    "version": 1
  }
}
