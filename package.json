{
  "name": "nilecare-healthcare-platform",
  "version": "2.0.0",
  "description": "NileCare Healthcare Platform - Microservices Architecture",
  "scripts": {
    "start": "node microservices/main-nilecare/dist/index.js",
    "dev": "cd microservices/main-nilecare && npm run dev",
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration --runInBand",
    "test:e2e": "playwright test",
    "test:load": "k6 run tests/load/full-system-test.js",
    "test:load:auth": "k6 run tests/load/auth-load-test.js",
    "test:load:billing": "k6 run tests/load/billing-payment-load-test.js",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "phase1:setup": ".\\scripts\\setup-phase1.ps1",
    "phase2:verify": ".\\scripts\\phase2-week3-migration-simple.ps1 -DryRun",
    "phase2:migrate": ".\\scripts\\phase2-week3-migration.ps1",
    "phase3:start": ".\\scripts\\start-all-services-phase3.ps1",
    "phase3:infrastructure": ".\\scripts\\start-phase3-dev.ps1",
    "phase3:test": "npm run test:integration && npm run test:load",
    "docs:generate": "node scripts/generate-api-docs.js",
    "monitoring:start": "cd monitoring && docker-compose up -d",
    "monitoring:stop": "cd monitoring && docker-compose down"
  },
  "workspaces": [
    "microservices/*",
    "packages/@nilecare/*",
    "gateway",
    "clients/*"
  ],
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@playwright/test": "^1.40.0",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.0",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^27.6.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "healthcare",
    "medical",
    "ehr",
    "microservices",
    "healthcare-platform",
    "sudan",
    "telemedicine"
  ],
  "author": "NileCare Team",
  "license": "PROPRIETARY"
}

