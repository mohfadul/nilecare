{
  "name": "@nilecare/integration-tests",
  "version": "1.0.0",
  "description": "Comprehensive integration test suite for NileCare platform",
  "private": true,
  "scripts": {
    "test": "jest --runInBand",
    "test:e2e": "jest --testPathPattern=e2e --runInBand",
    "test:db": "jest --testPathPattern=database --runInBand",
    "test:auth": "jest --testPathPattern=auth --runInBand",
    "test:performance": "jest --testPathPattern=performance --runInBand --testTimeout=60000",
    "test:all": "jest --runInBand --coverage",
    "test:watch": "jest --watch",
    "test:health": "node scripts/health-check.js",
    "test:load": "artillery run load-tests/basic-load.yml"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "pg": "^8.11.3",
    "mongoose": "^8.0.3",
    "ioredis": "^5.3.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.0",
    "supertest": "^6.3.3",
    "@types/supertest": "^2.0.16",
    "artillery": "^2.0.0",
    "dotenv": "^16.3.1"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "**/__tests__/**/*.ts",
      "!**/__tests__/**/setup.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 60,
        "functions": 60,
        "lines": 60,
        "statements": 60
      }
    },
    "setupFilesAfterEnv": ["<rootDir>/__tests__/setup.ts"],
    "testTimeout": 30000
  }
}

