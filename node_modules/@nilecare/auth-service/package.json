{
  "name": "@nilecare/auth-service",
  "version": "1.0.0",
  "description": "Authentication and Authorization Service - JWT, RBAC, MFA, OAuth2/OpenID Connect",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "migrate:info": "flyway -configFiles=flyway.conf info",
    "migrate:validate": "flyway -configFiles=flyway.conf validate",
    "migrate:up": "flyway -configFiles=flyway.conf migrate",
    "migrate:undo": "flyway -configFiles=flyway.conf undo",
    "migrate:baseline": "flyway -configFiles=flyway.conf baseline",
    "migrate:repair": "flyway -configFiles=flyway.conf repair",
    "migrate:clean": "flyway -configFiles=flyway.conf clean",
    "migrate:dev": "flyway -configFiles=flyway-dev.conf migrate",
    "migrate:prod": "flyway -configFiles=flyway-prod.conf migrate",
    "db:create": "mysql -u root -p -e \"CREATE DATABASE IF NOT EXISTS nilecare_auth CHARACTER SET utf8mb4 COLLATE utf8mb4_unicode_ci;\"",
    "db:drop": "mysql -u root -p -e \"DROP DATABASE IF EXISTS nilecare_auth;\""
  },
  "dependencies": {
    "@nilecare/logger": "file:../../packages/@nilecare/logger",
    "@nilecare/config-validator": "file:../../packages/@nilecare/config-validator",
    "@nilecare/error-handler": "file:../../packages/@nilecare/error-handler",
    "argon2": "^0.31.2",
    "axios": "^1.6.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "connect-redis": "^7.1.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "csurf": "^1.11.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.17.3",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "kafkajs": "^2.2.4",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.0",
    "mysql2": "^3.15.2",
    "nodemailer": "^6.9.7",
    "otplib": "^12.0.1",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "passport-oauth2": "^1.7.0",
    "passport-openidconnect": "^0.1.1",
    "pg": "^8.11.3",
    "qrcode": "^1.5.3",
    "redis": "^4.6.12",
    "speakeasy": "^2.0.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "twilio": "^4.19.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "node-flyway": "^3.0.7",
    "@types/bcrypt": "^6.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/connect-redis": "^0.0.21",
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.17.10",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.0",
    "@types/nodemailer": "^6.4.14",
    "@types/passport": "^1.0.16",
    "@types/passport-jwt": "^3.0.13",
    "@types/passport-local": "^1.0.38",
    "@types/passport-oauth2": "^1.4.12",
    "@types/passport-openidconnect": "^0.1.0",
    "@types/pg": "^8.10.9",
    "@types/qrcode": "^1.5.5",
    "@types/socket.io": "^3.0.1",
    "@types/speakeasy": "^2.0.10",
