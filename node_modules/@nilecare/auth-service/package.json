    "@types/swagger-ui-express": "^4.1.6",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "socket.io": "^4.8.1",
    "ts-jest": "^29.1.1",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0"
  },
  "keywords": [
    "healthcare",
    "authentication",
    "authorization",
    "jwt",
    "rbac",
    "oauth2",
    "openid-connect",
    "mfa",
    "microservice"
  ],
  "author": "NileCare Team",
  "license": "MIT"
}
