{
  "name": "billing-service",
  "version": "1.0.0",
  "description": "NileCare Billing and Insurance Service",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "migrate:info": "flyway -configFiles=flyway.conf info",
    "migrate:validate": "flyway -configFiles=flyway.conf validate",
    "migrate:up": "flyway -configFiles=flyway.conf migrate",
    "migrate:undo": "flyway -configFiles=flyway.conf undo",
    "migrate:baseline": "flyway -configFiles=flyway.conf baseline",
    "migrate:repair": "flyway -configFiles=flyway.conf repair",
    "db:create": "mysql -u root -p -e \"CREATE DATABASE IF NOT EXISTS nilecare_billing CHARACTER SET utf8mb4 COLLATE utf8mb4_unicode_ci;\""
  },
  "dependencies": {
    "@nilecare/logger": "file:../../packages/@nilecare/logger",
    "@nilecare/config-validator": "file:../../packages/@nilecare/config-validator",
    "@nilecare/error-handler": "file:../../packages/@nilecare/error-handler",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "compression": "^1.7.4",
    "dotenv": "^16.3.1",
    "mysql2": "^3.6.0",
    "axios": "^1.5.0",
    "joi": "^17.9.2",
    "express-rate-limit": "^6.10.0",
    "winston": "^3.10.0",
    "uuid": "^9.0.0",
    "node-cron": "^3.0.2",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "node-flyway": "^3.0.7",
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.13",
    "@types/compression": "^1.7.2",
    "@types/uuid": "^9.0.2",
    "@types/node-cron": "^3.0.8",
    "@types/node": "^20.4.5",
    "typescript": "^5.1.6",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1"
  },
  "keywords": [
    "healthcare",
    "billing",
    "insurance",
    "edi",
    "microservice",
    "typescript",
    "express"
  ],
  "author": "NileCare Team",
  "license": "MIT"
}
