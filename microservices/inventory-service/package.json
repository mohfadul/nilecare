{
  "name": "inventory-service",
  "version": "1.0.0",
  "description": "NileCare Inventory Management Service",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "migrate:info": "flyway -configFiles=flyway.conf info",
    "migrate:validate": "flyway -configFiles=flyway.conf validate",
    "migrate:up": "flyway -configFiles=flyway.conf migrate",
    "migrate:undo": "flyway -configFiles=flyway.conf undo",
    "migrate:baseline": "flyway -configFiles=flyway.conf baseline",
    "db:create": "mysql -u root -p -e \"CREATE DATABASE IF NOT EXISTS nilecare_inventory CHARACTER SET utf8mb4 COLLATE utf8mb4_unicode_ci;\""
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0",
    "compression": "^1.7.4",
    "dotenv": "^16.3.1",
    "pg": "^8.11.3",
    "redis": "^4.6.7",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "joi": "^17.9.2",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "swagger-ui-express": "^5.0.0",
    "swagger-jsdoc": "^6.2.8",
    "winston": "^3.10.0",
    "uuid": "^9.0.0",
    "moment": "^2.29.4",
    "lodash": "^4.17.21",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.2",
    "socket.io": "^4.7.2",
    "kafkajs": "^2.2.4",
    "bull": "^4.11.3",
    "nodemailer": "^6.9.4",
    "twilio": "^4.15.0",
    "firebase-admin": "^11.10.1",
    "qrcode": "^1.5.3",
    "bwip-js": "^4.5.1",
    "sharp": "^0.32.4",
    "csv-parser": "^3.0.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.13",
    "@types/morgan": "^1.9.4",
    "@types/compression": "^1.7.2",
    "@types/pg": "^8.10.2",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/bcryptjs": "^2.4.2",
    "@types/joi": "^17.2.3",
    "@types/express-rate-limit": "^6.0.0",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/uuid": "^9.0.2",
    "@types/lodash": "^4.14.195",
    "@types/multer": "^1.4.7",
    "@types/node-cron": "^3.0.8",
    "@types/node": "^20.4.5",
    "typescript": "^5.1.6",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "@types/jest": "^29.5.3",
    "jest": "^29.6.1",
    "ts-jest": "^29.1.1",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "eslint": "^8.45.0",
    "@types/qrcode": "^1.5.0",
    "@types/sharp": "^0.32.0"
  },
  "keywords": [
    "healthcare",
    "inventory-management",
    "supply-chain",
    "microservice",
    "typescript",
    "express"
  ],
  "author": "NileCare Team",
  "license": "MIT"
}
