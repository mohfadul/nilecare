# ============================================================================
# Main NileCare Service - Environment Variables
# Central integration and orchestration service
# ============================================================================

# ============================================================================
# SERVICE CONFIGURATION
# PORT 7000 as per NileCare documentation (single source of truth)
# ============================================================================
NODE_ENV=development
PORT=7000
SERVICE_NAME=main-nilecare
APP_URL=http://localhost:7000

# ============================================================================
# SHARED DATABASE CONFIGURATION
# All microservices use the SAME database: nilecare
# ============================================================================
DB_HOST=localhost
DB_PORT=3306
DB_NAME=nilecare
DB_USER=root
DB_PASSWORD=

# ============================================================================
# AUTHENTICATION SERVICE
# PORT 7020 as per documentation
# ============================================================================
AUTH_SERVICE_URL=http://localhost:7020
JWT_SECRET=nilecare-jwt-secret-change-in-production

# ============================================================================
# DOWNSTREAM MICROSERVICES
# Ports as per NileCare documentation (README.md, COMPREHENSIVE_REPORT.md)
# ============================================================================
PAYMENT_SERVICE_URL=http://localhost:7030
APPOINTMENT_SERVICE_URL=http://localhost:7040
BUSINESS_SERVICE_URL=http://localhost:7010

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=info

# ============================================================================
# RATE LIMITING
# ============================================================================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================================================
# CORS
# ============================================================================
CORS_ORIGIN=http://localhost:5173,http://localhost:3000

