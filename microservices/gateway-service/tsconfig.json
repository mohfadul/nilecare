{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "types": ["node", "jest"],
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["../../shared/*"]
    }
  },
  "include": ["src/**/*", "../../shared/middleware/auth.ts"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "../../shared/middleware/facilityIsolation.ts", "../../shared/services/*", "../../shared/utils/offlineStorage.ts", "../../shared/utils/facilityQueryHelper.ts"]
}

