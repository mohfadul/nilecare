# ============================================================================
# NileCare Gateway Service - Environment Configuration
# ============================================================================

# Node Environment
NODE_ENV=development
SERVICE_NAME=gateway-service
PORT=3000

# Logging
LOG_LEVEL=info
LOG_DIR=logs

# ============================================================================
# Authentication Service (REQUIRED)
# ============================================================================
AUTH_SERVICE_URL=http://localhost:7020
AUTH_SERVICE_API_KEY=your-64-char-api-key-here-replace-with-secure-key

# ============================================================================
# Backend Microservices
# ============================================================================
CLINICAL_SERVICE_URL=http://localhost:7001
BUSINESS_SERVICE_URL=http://localhost:7010
DATA_SERVICE_URL=http://localhost:7003
NOTIFICATION_SERVICE_URL=http://localhost:7002
BILLING_SERVICE_URL=http://localhost:7011

# ============================================================================
# CORS Configuration
# ============================================================================
# Comma-separated list of allowed origins
CORS_ORIGIN=http://localhost:3000,http://localhost:4200,http://localhost:5173

# ============================================================================
# Rate Limiting
# ============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================================================
# Optional: Redis (for distributed rate limiting - future)
# ============================================================================
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=

# ============================================================================
# Optional: Kafka (for event streaming - future)
# ============================================================================
# KAFKA_BROKERS=localhost:9092
# KAFKA_USERNAME=
# KAFKA_PASSWORD=
# KAFKA_SSL=false

# ============================================================================
# Optional: Monitoring
# ============================================================================
# SENTRY_DSN=
# NEW_RELIC_LICENSE_KEY=
# DATADOG_API_KEY=
